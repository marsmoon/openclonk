<funcs>
  <func>
    <title>SetTemperature</title>
    <category>Environment</category>
    <subcat>Weather</subcat>
    <version>5.1 OC</version>
    <syntax>
      <rtype>void</rtype>
      <params>
        <param>
          <type>int</type>
          <name>temperature</name>
          <desc>Temperature from -100 to 100.</desc>
        </param>
      </params>
    </syntax>
    <desc>Sets the global temperature.</desc>
    <examples>
      <example>
        <code>SetTemperature(-100);</code>
        <text>Shock freezes the landscape.</text>
      </example>
    </examples>
    <related><funclink>GetTemperature</funclink></related>
  </func>
  <author>jwk</author><date>2002-08</date>
</funcs>
